<div class="container-fluid">
  <div class="row">
    <div>
    <header class="bg-image-full non-homepage" id="profile-header">
          <h2>Edit Your Gamer Profile Bro</h2><br>
          <%= cl_image_tag @user.photo, class: "avatar-large profile-page-avatar", crop: :fill, width: 200, height: 200 %>
    </header>
    </div>
  </div>
</div>

<div class="container user-details-edit">
    <div class="row">
      <div class="col-xs-10 col-xs-offset-1">
    <div class="col-md-6 col-md-offset-4">
    <p><%= simple_form_for [@user] do |f|  %>
    <%= f.input :username %><br>
    <%= f.input :gamer_tags %><br>
    <%= f.input :console %><br>
    <%= f.input :games %><br>
    <%= f.input :ranking %><br>
    <%= f.input :location %><br>
    <%= f.input :bio %><br>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
    <%= f.submit "Upadate Profile", class: "btn btn-primary" %>
    <% end %></p>
    </div>
   </div>
</div>
