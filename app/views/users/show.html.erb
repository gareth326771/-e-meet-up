<% @disable_footer = true %>
<div class="container-fluid">
  <div class="row">
    <div>
    <header class="bg-image-full non-homepage" id="profile-header">
          <h2>Welcome To Your Profile Page</h2><br>
          <%= cl_image_tag @user.photo, class: "avatar-large profile-page-avatar", crop: :fill, width: 200, height: 200 %>
    </header>
    </div>
  </div>
</div>

  <div class="container user-details-show">
    <div class="row">
      <div class="col-xs-10 col-xs-offset-1">
         <div class="attend-button text-right">
      <%= link_to "Edit Profile", edit_user_path(current_user), class: 'btn mikes-btn' %>
      </div>
        <h3><%= current_user.username %></h3>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">
            <i class="fas fa-user"></i><span id="event-details-list"><%= current_user.email %> </span>
          </li>
          <li class="list-group-item">
            <i class="fas fa-tag"><span id="event-details-list"></i><%= current_user.gamer_tags%> </span>
          </li>
          <li class="list-group-item">
            <i class="fas fa-tv"></i><span id="event-details-list"><%= current_user.console %></span>
          </li>
          <li class="list-group-item">
            <i class="fas fa-compact-disc"></i><span id="event-details-list"><%= current_user.games %></span>
          </li>
          <li class="list-group-item">
            <i class="fas fa-location-arrow"></i><span id="event-details-list"><%= current_user.location %></span>
          </li>
          <li class="list-group-item">
            <i class="fas fa-trophy"></i><span id="event-details-list"><%= current_user.ranking %></span>
          </li>
          <li class="list-group-item">
            <i class="fas fa-info-circle"></i><span id="event-details-list"><%= current_user.bio %></span>
          </li>
        </ul>
      </div>
    </div>
  </div>

