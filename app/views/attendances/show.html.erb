        </div>
      </div>

      <div class="col-md-4">
        <div class="people_attending">
          <h3>People attending</h3>
          <ul>
            <% @attendance.meetup.attendances.each do |attendance| %>
              <li><%= attendance.user.username %></li>
            <% end %>
          </ul>
        </div>
      </div>

    </div>

  </div>
</div>

