<header class="bg-image-full" id="homepage-header">
  <div>
    <h2>Find your e-vent!</h2>
  </div>
</header>

<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <h2>Find an e-Meet</h2>
       <%= form_tag meetups_path, method: :get do %>
          <%= text_field_tag :search,
            params[:search],
            class: "form-control",
            placeholder: "Location" %>
            <%= date_field_tag(:datetime_ida, Date.today, class: 'form-control') %>
            <%= select_tag :search,
            "<option>LAN</option><option>Tournamount</option><option>Private</option>".html_safe,
            class: "form-control",
            placeholder: "Type of event" %>
            <%= link_to "Search", meetups_path %>
        <% end %>
      </div>
   </div>
</div>

